
   {{!-- ///--------------- bootstrap side navbar--------------- --}}
        
       
<div class="sidebar" style="position: relative;left:-15px;top:60px;">
  <a href="/admin/">Dashboard</a>
  <a class="active" href="/admin/blog">Show Blogs</a>
  <a href="/admin/delete">Delete Blogs</a>
</div>
 
 <div class="container" style="position: relative;top:-80px;left:90px;">
        <div class="row">
           {{#each data}}
           <div class="col-md-4">
             <a href="/user/posts/{{this._id}}">
            <div class="card" style="margin-left :10px; margin-bottom:50px;border-radius: 15px;transition: 0.3s;">
            <img class="card-img-top" src="/{{this.headImg}}" alt="Card image cap" style="border-radius: 15px 15px 0 0;">
            <div class="card-body">
            <h5 class="card-title">
                <font face = "Bedrock" size = "5">{{this.heading}}</font></h5>
            <img src="data:image/png;base64," style="width: 20px;height:20px"><span style="position:relative;top:8px;font-weight:lighter">{{this.date}}</span></img>
            <hr>
            <h6>Author: <span style="font-weight:lighter">{{{this.username}}}</span></h6>
            <h6>Category: <span style="font-weight:lighter">{{{this.category}}}</span></h6>
         </div>
       </div>
       </a>
       </div>
  
           {{/each}}
           </div>
      </div>

