
   {{!-- ///--------------- bootstrap side navbar--------------- --}}
        
       
<div class="sidebar" style="background-color:rgb(241,241,241)">
          <a href="#">Home</a>
         <a href="/admin">Dashboard</a>
         <a href="/admin/analytics">Analytics <br><div style="font-size: 12px;">(Sort By No. of Views On Blog)</div></a>
         <a href="/admin/analyticsblog">Analytics <br><div style="font-size: 12px;">(Sort By No. of Blog Posted)</div></a>
          <a href="/admin/blog" class="active">Show Blogs</a>
           <a href="/admin/delete">Delete Blogs</a>
</div>
 
 <div class="container" style="position: relative;top:80px;left:90px;">
        <div class="row">
           {{#each data}}
           <div class="col-md-4">
             <a href="/user/posts/{{this._id}}" style="text-decoration: none; color:black">
            <div class="card" style="margin-left :10px; margin-bottom:50px;border-radius: 15px;transition: 0.3s;">
            <img class="card-img-top" src="{{this.headImg}}" alt="blog image" style="border-radius: 15px 15px 0 0;" height="250px">
            <div class="card-body">
            <h5 class="card-title text-truncate" style="max-width: 270px;">
                <font face = "Bedrock" size = "5">{{this.heading}}</font></h5>
            <i class="far fa-calendar-alt"></i><span style="padding-left:5px;font-size:14px">{{this.date}}</span><hr>
            <h6>Author: {{{this.username}}}</h6>
            <h6>Category: {{{this.category}}}</h6>
         </div>
       </div>
       </a>
       </div>
  
           {{/each}}
           </div>
      </div>