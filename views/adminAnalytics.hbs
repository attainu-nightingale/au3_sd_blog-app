     {{!-- ///--------------- bootstrap side navbar--------------- --}}
        
       
       <div class="sidebar" style="background-color:rgb(241,241,241)">
         <a href="#">Home</a>
         <a href="/admin">Dashboard</a>
         <a href="/admin/analytics" class="active">Analytics <br><div style="font-size: 12px;">(Sort By No. of Views On Blog)</div></a>
