      {{!-- Graph Droopdown --}}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4" style="position: relative;top:50px;">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2" style="position:relative;right:-400px;">Admin Dashboard</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
         <select class="browser-default custom-select custom-select-sm mb-3" id='graph' onchange="dropdownValue()">
           <option selected>Select Graph</option>
            <option value="bar">Bar Graph</option>
           <option value="pie">Pie Chart</option>
           <option value="line">Line</option>
           <option value="doughnt">Doughnt & Pie</option>
           <option value="horizontal">Horizontal Bar</option>
         </select>
        </div>
      </div>
       
          {{!-- Graph Starts here --}}

      <canvas id="myChart" width="900" height="380">
      </canvas>
      </div>
    </main>
  </div>
</div>


 {{!-- JavaScript File --}}
   <script>
   var mychart = document.getElementById('myChart').getContext('2d');
   var userchart;
    //------- Heading array
    var username = [];
     {{#each data}}
         username.push('{{{this.username}}}')
     {{/each}}

     //---------- Views Array
     var views = [];
     {{#each data}}
         views.push({{{this.total}}})
     {{/each}}
     // Global Options
    Chart.defaults.global.defaultFontFamily = 'Lato';
    Chart.defaults.global.defaultFontSize = 18;
    Chart.defaults.global.defaultFontColor = '#777';


     var userchart = new Chart(mychart , {
     type : 'bar',
     data : {
        labels : username,
        datasets : [{
            label : 'No. Of Views',
            data : views,
            backgroundColor:[
                'rgba(255, 99, 132, 0.6)',
                'rgba(54, 162, 235, 0.6)',
                'rgba(255, 206, 86, 0.6)',
                'rgba(75, 192, 192, 0.6)',
                'rgba(153, 102, 255, 0.6)',
                'rgba(255, 159, 64, 0.6)',
                'rgba(255, 99, 132, 0.6)'
              ],
              borderWidth:1,
              borderColor:'#777',
              hoverBorderWidth: 1,
              hoverBorderColor:'#000'
        }]
    },
    options : {
        title : {
            display : true,
            text : 'Total No. of Views On Blog',
            fontSize : 25,
        },
        legend : {
            display : true,
            position : 'right',
            labels : {
                fontColor : '#000',
            }
        }
    }
});

